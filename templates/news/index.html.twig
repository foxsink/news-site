{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    {% for post in paginator %}
        <div>
            {{ post.title }}
            <br>
            {{ post.announce }}
        </div>
    {% endfor %}
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {% if pageNumber - 1 > 0 %}
                <li class="page-item"><a class="page-link" href="{{ path('news', {'page': pageNumber - 1}) }}?order={{ order }}">Previous</a></li>
                <li class="page-item"><a class="page-link" href="{{ path('news', {'page': pageNumber - 1}) }}?order={{ order }}">{{ pageNumber - 1 }}</a></li>
            {% endif %}
            <li class="page-item"><a class="page-link" href="{{ path('news', {'page': pageNumber }) }}?order={{ order }}">{{ pageNumber }}</a></li>
            {% if pageNumber + 1 <= pageCount %}
                <li class="page-item"><a class="page-link" href="{{ path('news', {'page': pageNumber + 1}) }}?order={{ order }}">{{ pageNumber + 1 }}</a></li>
                <li class="page-item"><a class="page-link" href="{{ path('news', {'page': pageNumber + 1}) }}?order={{ order }}">Next</a></li>
            {% endif %}
        </ul>
    </nav>
    <a href="{{ path('news', {'page': pageNumber}) }}?order=ASC">ASC</a>
    <a href="{{ path('news', {'page': pageNumber}) }}?order=DESC">DESC</a>
{% endblock %}